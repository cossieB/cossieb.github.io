---
import Header from "../components/Welcome/Header.astro";
import Nav from "../components/Nav/Nav";
import List from "../components/Projects/List";
import Welcome from "../components/Welcome/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Grid from "../components/Projects/Grid";
import "../styles/global.scss";
import Skills from "../components/Skills/SkillsList"
---

<Layout title="Buntu Cossie">
    <Nav client:only="solid-js" />
    <main>
        <Welcome />
        <Header
            id="about-header"
            label="About"
        />
        <div id="about" class="mainDivs">
            <img src="/me.jpg" />
            <div class="paragraph">
                <p>I am Buntu Cossie, a self-taught full-stack developer based in South Africa. I'm mainly a MERN stack and
                    TypeScript developer but I am also comfortable with Python, C# and MySQL.</p>
                <p>I'm a diligent and highly intelligent individual with an avid interest in technology and computer
                    programming. I'm a fast learner and meticulous worker who enjoys challenges and problem solving. </p>
            </div>
        </div>
        <Header
            id="projects-header"
            label="Projects"
        />
        <List client:visible />
        <Header id="small-projects-header" label="Smaller Projects" />
        <Grid client:visible />
        <Header id="skills-header" label="Skills" />
        <Skills />
    </main>
</Layout>
